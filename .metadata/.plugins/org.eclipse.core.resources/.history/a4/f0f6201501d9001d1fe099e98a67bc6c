		<script type="text/javascript">
			function calc(){
				//name속성이 myform1인 form객체 내부에 정의된 name=num1인 텍스트상자에
				//입력된 값을 읽어서 num1변수에 저장
				var num1 = myform1.num1.value;//value속성이 getter로 사용
				console.log(num1);
				myform1.num3.value = num1; //setter
			} al
			function calc2(){
				var num2 = myform1.num2.value;//value속성이 getter로 사용
				myform1.num3.value = num2*1.2+1000; //setter
			}
			function showdiv(){
				//num1텍스트에 입력한 값을 읽어서 div에 출력
				var numValue = myform1.num1.value;
				//id가 result인 html요소를 찾아온다.
				var mydiv = document.getElementById("result");
				//찾아온 html요소에 문자열을 추가하기
				mydiv.innerHTML = "<h1>안녕하세요 값은:"+numValue+"입니다</h1>";
			}
			// body태그 내부에서 정의된 폼 3개에서 동일한 작업을 하는 경우
			// 현재 작업중인 폼의 정보를 함수의 매개변수로 넘기고 작업
			// 
			function run(workingform){
				var num1 = workingform.num1.value;
				
			}
		</script>
