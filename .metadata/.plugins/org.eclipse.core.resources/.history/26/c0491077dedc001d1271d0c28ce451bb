			//items라는 이름으로 class명이 정의된 모든
			console.log("*******************************");
			let items = document.querySelectorAll(".items");
			console.log(items.length);
			//NodeList의 모든 Node에 반복작업
			items.forEach((el , i)=>{
				console.log(el.textContent + ":" + i);
				console.log("값:"+i);
				el.classList.add(`subject-${i+1}`);
				console.log(`값: ${i}`);
			});
