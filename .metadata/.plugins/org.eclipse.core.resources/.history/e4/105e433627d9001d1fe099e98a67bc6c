	<script type="text/javascript">
		function order(){
			var sum = 100000;
			
			var bbq = orderform.bbq.value != "" ? orderform.bbq.value : 0;
			var blanket = orderform.blanket.value != "" ? orderform.blanket.value : 0;
			var count = orderform.count.value != "" ? orderform.count.value : 0;
			sum += bbq * count;
			sum += count * 20000;
			sum += blanket * 10000;
			
			orderform.subtotal.value = sum;
			
			orderform.tax.value = sum * 0.1;
			orderform.total.value = (sum + sum * 0.1);
		}	
	
		function changeImg(){
			document.getElementById("hotelImage").src="/clientweb/images/"+orderform.name.value+"1.jpg";
		}
		
		function exec(){
			order();
			var bbq = orderform.bbq.value;
			var blanket = orderform.blanket.value;
			var count = orderform.count.value;
			var subtotal = orderform.count.value;
			var tax = orderform.tax.value;
			var total = orderform.total.value;
			
			console.log(orderform.name);
			var html ="<p>객실:"+"sdf"+"</p>";
			html +="<p>바베큐:"+bbq+"</p>";
			html +="<p>이불수:"+blanket+"</p>";
			html +="<p>인원수:"+count+"</p>";
			html +="<p>금액:"+subtotal+"</p>";
			html +="<p>세금:"+tax+"</p>";
			html +="<p>총금액:"+total+"</p>";
			
			
			document.getElementById("result").innerHTML = html;
		}
	</script>

