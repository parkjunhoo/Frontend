	<script type="text/javascript">
		function testConfirm(){
			var result = window.confirm("삭제하시겠습니까?...");
			if(result){
				alert("삭제시작");
			}else{
				alert("삭제취소");
			}
		}
		
		function searchAddress() {
			var mypopup = window.open("/clientweb/js_bom/popup.html","mywin","width=500,height=300,left=300,top=200");
		}
		
		function idcheck(){
			var idpopup = window.open("/clientweb/js_bom/popup.html","mywin2","width=500,height=300,left=300,top=200");
		}
		
		function test_number() {
			var num1 = window.parseInt(myform.num1.value);
			var num2 = parseInt(myform.num2.value);
			myform.result.value = num1+num2;
		}
		
		function test_number2() {
			var num1 = myform.num1.value;
			myform.result.value = isNaN(num1);
			//location.href="https://naver.com";
		}
	</script>
