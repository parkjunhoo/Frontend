<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>Insert title here</title>
		<script type="text/javascript">
			function calc(){
				//name속성이 myform1인 form객체 내부에 정의된 name=num1인 텍스트상자에
				//입력된 값을 읽어서 num1변수에 저장
				var num1 = myform1.num1.value;//value속성이 getter로 사용
				console.log(num1);
				myform1.num3.value = num1; //setter
			}
			function calc2(){
				var num2 = myform1.num2.value;//value속성이 getter로 사용
				myform1.num3.value = num2*1.2+1000; //setter
			}
			function showdiv(){
				//num1텍스트에 입력한 값을 읽어서 div에 출력
				var numValue = myform1.num1.value;
				//id가 result인 html요소를 찾아온다.
				var mydiv = document.getElementById("result");
				//찾아온 html요소에 
			}
		</script>
	</head>
	<body onload="alert('환영합니다.')">
		<!-- 키보드와 폼객체에 관련된 이벤트 -->
		<form name="myform1">
			<input type="text" name="num1" onkeyup="calc()"/><br>
			<input type="text" name="num2" onchange="calc2()"/><br>
			<input type="text" name="num3"/><br>
			<input type="text" name="num4"/><br>
			<input type="button" value="전송1"/><br>
			
			
