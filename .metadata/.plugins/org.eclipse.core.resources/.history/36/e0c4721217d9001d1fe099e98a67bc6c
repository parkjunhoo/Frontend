<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
	<script type="text/javascript">
		function createCalTable(today){
			
			var table = "<div id='myCal'><p>"+today.getFullYear()+"년"+(today.getMonth()+1)+"월"+"</p>";
			table += "<table id='calTable'><thead><tr><th>일</th><th>월</th><th>화</th><th>수</th><th>목</th><th>금</th><th>토</th><tr/></thead>";
			table += "</div>";
			
			
			//var today = new Date();
			
			//console.log("현재Date==>"+today);
			var todayDate = today.getDate();
			
			
			today.setDate(1);
			//console.log("1일Date==>"+today);
			var firstDayNumber = today.getDay();
			var firstDate = today.getDate();
			
			
			
			today.setMonth(today.getMonth()+1);
			today = new Date(today - 86400000);
			//console.log("말일Date==>"+today);
			var lastDate = today.getDate();
			
			/* console.log("todayDate=>"+todayDate);
			console.log("firstDayNumber=>"+firstDayNumber);
			console.log("firstDate=>"+firstDate);
			console.log("lastDate=>"+lastDate); */
			
			table += "<tr>";
			for(i =1; i<=lastDate+firstDayNumber; i++){
				if(i<=firstDayNumber){
					table += "<td></td>";
				}else{
					if(todayDate == i-firstDayNumber){
						table += "<td class='today'>"+(i-firstDayNumber)+"</td>";
					}else{
						table += "<td>"+(i-firstDayNumber)+"</td>";
					}
					if(i%7==0){
						table += "</tr><tr>";
					}
				}
			}
			table += "</tr></table>";

			document.write(table);
		}
	</script>
	<style type="text/css">
	
		#calTable td{
			background-color: #ffff99;
		}
		
		#calTable p{
		}
		
		#calTable .today{
			background-color: #ffcccc;
		}
	</style>
</head>
<body>
	<script type="text/javascript">
		var date = new Date();
		date.setMonth(7-1);
		date.setDate(6);
		
		createCalTable(date)
	</script>
</body>
