	<script type="text/javascript">
		function mycallback(){
			alert(":)");
		}
		
		let btns = document.querySelectorAll("input");
		btns.forEach((el,i)=>{
			if(i != 3){
				el.onclick = () =>{
					alert(":(");
				}
			}else{
				el.onclick = mycallback;
			}
		});
	</script>
