<script type="text/javascript">
window.onload = () => {
	function mycallback(){
		alert("mycallback - 4번버튼");
		//1. id가 myform인 객체를 구하기
		let myform = document.getElementById("myform");
		//2. myform객체의 자식 노드를 구하기
		let children = myform.children;
		//3. 2번에서 구한 노드의 모든 자식노드 탐색 for문
		for(i =0; i<children.length; i++){
			for(o=0; o<children[i].children.length; o++){
				console.log(children[i]);
				console.log(children[i].children);
			}
		}
		//4. 3번에서 자식 노드를 탐색하면서 노드이름과 id 속성값 출력
		
	}
};
</script>
</head>
